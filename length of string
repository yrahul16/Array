#include<iostream>
using namespace std;
int main(){
    char name[10];
    cout<<"Enter your name "<< endl;
    cin>>name ;
    cout<<"**************************"<<endl;
    //cout<<"Your name is ";
    //cout<<name<<endl;
    int count = 0;
    int i = 0 ;
    while(name[i] != '\0'){
        count++;
        i++;
    }
    cout<<"The length of string is "<<count<< endl;
}
